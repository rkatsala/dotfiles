[diff "pandoc"]
	textconv=pandoc --to=markdown
	prompt = false
[alias]
	wdiff = diff --word-diff=color --unified=1
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=local
[user]
	name = Roman Katsala
	email = rkatsala@gmail.com
[merge]
	tool = meld
[diff]
	tool = meld
[difftool]
	prompt = false
[credential]
	helper = cache --timeout=36000
[push]
	default = simple
[cola]
	tabwidth = 4
[gui]
	editor = nano
	historybrowser = tig
[core]
	autocrlf = input
	safecrlf = true
[pull]
	ff = only
