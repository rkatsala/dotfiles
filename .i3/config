    bindsym t exec --no-startup-id terminal -e zsh -c "tmux", mode "default"
    bindsym a exec --no-startup-id "chromium & skypeforlinux & evolution & code & terminal -e zsh -c tmux", mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

